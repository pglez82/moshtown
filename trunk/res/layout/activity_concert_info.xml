<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EventLayout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventInfoActivity" >

    <TextView
        android:id="@+id/detailedconcertname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="20dp"
        android:textSize="20sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"/>
    <Button
        android:id="@+id/buttonaddcalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonAddCalendar"
        android:text="@string/calendarbuttontext"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/EventLayoutSep1"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@android:color/darker_gray"
        android:layout_below="@+id/buttonaddcalendar"/>

    <TextView
            android:id="@+id/detailedconcertdesc"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:maxLines = "10"
            android:scrollbars = "vertical"
            android:layout_below="@+id/EventLayoutSep1"/>

    <it.sephiroth.android.library.imagezoom.ImageViewTouch
        android:id="@+id/detailedEventImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/imagen_evento"
        android:gravity="center_horizontal"
        android:layout_below="@+id/detailedconcertdesc"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />

    <View
        android:id="@+id/EventLayoutSep2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/detailedEventImage"/>

    <TextView
        android:id="@+id/detailedconcerttickes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_below="@+id/EventLayoutSep2"/>

    <View
        android:id="@+id/EventLayoutSep3"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/detailedconcerttickes"/>

    <ListView
        android:id="@+id/detailedlistbands"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:headerDividersEnabled="true"
        android:layout_below="@+id/EventLayoutSep3">
    </ListView>

    <Button
            android:id="@+id/buttonshowmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonShowMap"
            android:text="@string/mapabuttontext"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/EventLayoutSep1"/>
</RelativeLayout>