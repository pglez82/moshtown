<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@drawable/background_main"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >

    <AutoCompleteTextView
            android:id="@+id/editCiudad"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="@string/edit_ciudad_hint"
            />

        <ImageButton
                android:id="@+id/positionButon"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:text="@string/gps_button"
                android:layout_alignParentRight="false"
                android:layout_toLeftOf="@+id/buttonClear"
                android:background="@drawable/gps"
                android:layout_margin="3dp"
                />
    <ImageButton
            android:id="@+id/buscarButon"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:background="@drawable/search"
            android:text="@string/buscar_text"
            android:layout_toLeftOf="@+id/positionButon"
            android:layout_margin="3dp"
            />
    <ImageButton
            android:id="@+id/buttonClear"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:background="@drawable/clear"
            android:text="Button"
            android:contentDescription="Borrar"
            android:layout_alignRight="@+id/editCiudad"
            android:layout_alignParentRight="false"
            android:layout_margin="3dp"
            />
        <ListView
            android:id="@+id/list_main_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:layout_below="@+id/editCiudad">
        </ListView>



</RelativeLayout>

